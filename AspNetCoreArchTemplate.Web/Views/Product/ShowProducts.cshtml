*@
@{
}
@model ProductListViewModel

@{
    ViewData["Title"] = "Available Products";
}

<h2>
    Available Products @Model.TotalCount
    <a asp-action="AddProduct" class="btn btn-primary btn-sm ml-2">Add Product</a>
    <a asp-controller="Recipe" asp-action="CreateRecipe" class="btn btn-success btn-sm ml-2">➕ Create Recipe</a>
</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Calories</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Calories</td>
                <td>
                    <a asp-controller="Recipe" asp-action="CreateRecipe" asp-route-productId="@product.Id" class="btn btn-primary btn-sm">
                        Add to Recipe
                    </a>
                    <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-secondary btn-sm">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
