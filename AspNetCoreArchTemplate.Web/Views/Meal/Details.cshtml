@model EatHealthy.Web.ViewModels.Meal.MealViewModel

@{
    ViewData["Title"] = "Meal Details";
}

<h2>@Model.Name</h2>
<p><strong>Note:</strong> @Model.Note</p>
<p><strong>Total Calories:</strong> @Model.TotalCalories</p>
<p><strong>Recipes:</strong> @Model.RecipeCount</p>

<hr />

@if (ViewBag.MealRecipes != null)
{
    <h3>Recipes in this Meal:</h3>
    <div class="row">
        @foreach (var recipe in (IEnumerable<EatHealthy.Web.ViewModels.Recipe.RecipeViewModel>)ViewBag.MealRecipes)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@recipe.Name</h5>
                        <p class="card-text">Calories: @recipe.TotalCalories</p>
                        <a asp-controller="Recipe" asp-action="Details" asp-route-recipeId="@recipe.Id"
                           class="btn btn-sm btn-outline-info">View Recipe</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="MyMeals" class="btn btn-secondary">Back to My Meals</a>
</div>